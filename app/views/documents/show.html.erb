<script>
 $(document).ready(function(){
   $("p.content").click(function(event){
     alert($(this).text());
   });
 });
</script>

<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @document.title %>
</p>

<p>
  <b>Content:</b>
  <%= simple_format(@document.content, :class => 'content') %>
</p>

<p>
  <b>Url:</b>
  <%= @document.url %>
</p>

<p>
  <b>Author:</b>
  <%= @document.author %>
</p>

<h2>Add a note:</h2>
<%= form_for(@note) do |f| %>
  <div class="field">
    <%= f.label :content, 'Note' %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h2>Notes</h2>
<% @notes.each do |note| %>
	<%= link_to note.title, note %>
<% end %>


<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>
