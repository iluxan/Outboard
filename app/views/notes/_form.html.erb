<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :document %><br />
    <% if @document.nil? %>
	    <%= f.collection_select :document_id, Document.all, :_id, :title, {:prompt => '- Select Document -'} %>
    <% else %>
	    <%= @document.title %>
	    <%= f.hidden_field :document, @document %>
    <% end %>
  </div>
  
  
  <div class="field">
    <%= f.label :content, 'Note' %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
