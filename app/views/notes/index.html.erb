<h1>Listing notes</h1>

<%= link_to 'Notes', '/notes' %>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= link_to note.name note %></td>
    <td><%= Document.where(:_id => note.document_id).first %></td>
    <td><%= note.content %></td>
    <td><%= note.tags %></td>
    <td><%= note.updated_at %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

